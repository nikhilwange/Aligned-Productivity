{
  "name": "aligned",
  "private": true,
  "version": "1.0.0",
  "description": "Aligned - Workspace Intelligence Platform",
  "author": "Antigravity",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron-vite dev",
    "web": "vite",
    "build": "vite build",
    "build:electron": "electron-vite build",
    "package:mac": "electron-vite build && electron-builder --mac",
    "package:mac:dir": "electron-vite build && electron-builder --mac --dir",
    "package:win": "electron-vite build && electron-builder --win",
    "package:linux": "electron-vite build && electron-builder --linux",
    "preview": "vite preview",
    "cap:build": "vite build && npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:ios:dev": "npx cap run ios --livereload --external"
  },
  "build": {
    "appId": "com.antigravity.aligned",
    "productName": "Aligned",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "package.json",
      {
        "from": "out",
        "to": "out",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "dir"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Aligned needs microphone access to record meetings and dictations for AI-powered transcription.",
        "NSScreenCaptureDescription": "Aligned needs screen capture to record virtual meetings."
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "dmg": {
      "backgroundColor": "#0a0a0f",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@capacitor/core": "^6.2.1",
    "@capacitor/haptics": "^6.0.3",
    "@capacitor/ios": "^6.2.1",
    "@capacitor/keyboard": "^6.0.4",
    "@capacitor/splash-screen": "^6.0.4",
    "@capacitor/status-bar": "^6.0.3",
    "@google/genai": "^1.31.0",
    "@supabase/supabase-js": "^2.48.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
